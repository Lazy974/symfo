{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>
    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.image_file, { 
        label: 'Logo',
        'attr': {'class': 'form-control'}
    }) }}
    <div class="flex flex-col">
        <label for="registration_form_alias" class="required">Alias</label>
        {{ form_widget(registrationForm.alias, {'attr': {'class': 'bg-red-500', 'placeholder': 'Votre pseudonyme'}}) }}
    </div>    
        <label for="registration_form_email" class="required">Email</label>
        {{ form_widget(registrationForm.email) }}
        <label for="registration_form_plainPassword" class="required">Password</label>
        {{ form_widget(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <label for="registration_form_agreeTerms" class="required">Agree terms</label>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
